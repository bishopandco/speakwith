<input type='{{ inputType | default("text") }}'
       name='{{ name | default(id) }}'
       id='{{ id }}'
       class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 {{ extraClasses | default("") }}"
       placeholder='{{ placeholder | default("") }}'
       required=""
       {% for (key, value) in htmxpairs %}
         {{ key }}="{{value}}"
       {% endfor %}
       >
